<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <div class="post">
    <br>
    <header>
      <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
      <br>
      <h1><%= @post.title %></h1>
      <hr>
    </header>

    <div class="content">
      <%= markdown @post.content %>
      <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-default' %>
      <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}, class: 'btn btn-default' %>

    </div>

    <div id="share_box">
      <p>Share The DO List</p>
      <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @thandon20 - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter">twitter</i></a>
      <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook">facebook</i></a>
      <a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus">google +</i></a>
    </div>

<br>
