<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %> Prevent this post from saving:</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    <%= f.label :title %><br><br>
    <%= f.text_field :title %>

    <br>
    <br>

    <%= f.label :content, 'Write your article here' %><br><br>
    <%= f.text_area :content, class: 'textarea' %>

    <br>
    <br>

    <%= f.submit %>

<% end %>
